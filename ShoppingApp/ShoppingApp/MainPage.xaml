<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ShoppingApp"
             xmlns:translators="clr-namespace:ShoppingApp.Helpers;assembly=ShoppingApp"

             x:Class="ShoppingApp.MainPage">

    <StackLayout VerticalOptions="Center">
        <Entry x:Name="Mobiletxt" Placeholder="{translators:Translate Mobile}" Keyboard="Telephone"></Entry>
        <Entry x:Name="Passwordtxt" Placeholder="{translators:Translate Password}" IsPassword="True"></Entry>
        <Button x:Name="LoginBtn" Text="{translators:Translate Login}" TextColor="White" BackgroundColor="DodgerBlue" Clicked="Login_Clicked"></Button>        
    </StackLayout>

</ContentPage>
