<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShoppingApp.Views.ViewStorePage">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Orientation="Horizontal" HorizontalOptions="EndAndExpand" >
                <Label x:Name="nameLabel" Text="{Binding Store.Name}"/>
                <Label Text="نام فروشگاه : "/>
            </StackLayout>
            <StackLayout Orientation="Horizontal" HorizontalOptions="EndAndExpand" >
                <Label x:Name="stateLabel" Text="{Binding Store.State}"/>
                <Label Text="استان : "/>
            </StackLayout>
            <StackLayout Orientation="Horizontal" HorizontalOptions="EndAndExpand" >
                <Label x:Name="cityLabel" Text="{Binding Store.City}"/>
                <Label Text="شهر : "/>
            </StackLayout>
            <StackLayout Orientation="Horizontal" HorizontalOptions="EndAndExpand" >
                <Label x:Name="addressLabel" Text="{Binding Store.Address}"/>
                <Label Text="آدرس : "/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>